Private Sub cmd_get_cae_Click()
    Dim url As String
    Dim sql As String
    Dim rs As New ADODB.Recordset
    Dim fac As Integer

    fac = Me.Factura
    url = "http://192.168.0.102:3000/sales/build_access_invoice?"
    
    sql = "SELECT top 1 Fecha, Cliente, Remito, [Orden de compra], Moneda, Cotizacion FROM Facturas WHERE factura = " & fac
    rs.Open sql, CurrentProject.Connection
    
    If rs.EOF Then
        MsgBox "No se puede encontrar la Factura " & fac
        Exit Sub
    End If
    
    url = url & "d=" & rs(0) & "&c=" & rs(1) & "&r=" & rs(2) & "&odc=" & rs(3) & "&lc=" & -CInt(rs(4) = "$") & "&cr=" & Replace(rs(5), ",", ".")
    rs.Close


    sql = "SELECT Producto, Detalle, Kilos, Importe FROM Facturas WHERE factura = " & Factura
    rs.Open sql, CurrentProject.Connection


     Do While Not rs.EOF
        url = url & "&i[][p]=" & rs(0) & "&i[][d]=" & rs(1) & "&i[][q]=" & rs(2) & "&i[][a]=" & Replace(Replace(rs(3), ".", ""), ",", ".")
        rs.MoveNext
    Loop
    rs.Close
    Application.FollowHyperlink url
    
End Sub



.row
  .col-lg-12
    %h1.page-header Inicio
 

- unless user_signed_in?
  %p.lead Bienvenido
  %p     
    Si ya estás registrado 
    %a.btn.btn-primary.btn-sm{:href => new_user_session_path} Ingresa aquí
  %p
    De lo contrario
    %a.btn.btn-primary.btn-sm{:href => new_user_registration_path} Registrate
    
- else


  -if !current_company
    .row
      .col-lg-6
        .panel.panel-primary
          .panel-heading
            Empresa . . .
          .panel-body
            .dropdown
              %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown", :type => "button"}
                Seleccionar Empresa
                %span.caret
              %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
                - @companies.each do |company|
                  %li{:role => "presentation"}
                    %a{:href => "#{select_company_path(company)}", :role => "menuitem", :tabindex => "-1"} #{company.name}
                  

        

  - else      
    .row
      .col-lg-4
        .panel.panel-primary
          .panel-heading
            Empresa : #{current_company.name}
          .panel-body
            .dropdown
              %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown", :type => "button"}
                Cambiar de Empresa
                %span.caret
              %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
                - @companies.each do |company|
                  %li{:role => "presentation"}
                    %a{:href => "#{select_company_path(company)}", :role => "menuitem", :tabindex => "-1"} #{company.name}
                  
              
    .row
      .col-lg-12
        %h3.page-header Aplicaciones
    .row
      .col-lg-4
        %a.btn.btn-outline.btn-primary.btn-lg.btn-block{:href => backups_path} Archivos de Backups
      .col-lg-4
        %a.btn.btn-outline.btn-primary.btn-lg.btn-block{:href => summary_crop_controls_path} Control de Granos

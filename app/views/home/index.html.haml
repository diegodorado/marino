

.row
  .col-lg-12
    %h3.page-header Panel de Control


- unless user_signed_in?
  %p.lead Bienvenido
  %p
    Debes ingresar o registrarte para continuar.
  %br
  %br

  .row
    .col-lg-4
      %a.btn.btn-outline.btn-primary.btn-lg.btn-block{:href => new_user_session_path} Ingresa aquÃ­
      %br
    .col-lg-4
      %a.btn.btn-outline.btn-primary.btn-lg.btn-block{:href => new_user_registration_path} Registrate


- else


  -if !current_company
    .row
      .col-lg-6
        .panel.panel-primary
          .panel-heading
            Empresa . . .
          .panel-body
            - if @companies.count == 0
              %p
                Parece que aÃºn no hay ninguna Empresa asociada a tu cuenta.

            -else
              .dropdown
                %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown", :type => "button"}
                  Seleccionar Empresa
                  %span.caret
                %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
                  - @companies.each do |company|
                    %li{:role => "presentation"}
                      %a{:href => "#{select_company_path(company)}", :role => "menuitem", :tabindex => "-1"} #{company.name}




  - else
    .row
      .col-lg-4
        .panel.panel-default
          .panel-heading
            Empresa : #{current_company.name}
          .panel-body
            .dropdown
              %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown", :type => "button"}
                Cambiar de Empresa
                %span.caret
              %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
                - @companies.each do |company|
                  %li{:role => "presentation"}
                    %a{:href => "#{select_company_path(company)}", :role => "menuitem", :tabindex => "-1"} #{company.name}


    .row
      .col-lg-12
        %h3.page-header Aplicaciones
    .row
      .col-lg-4
        %a.btn.btn-outline.btn-primary.btn-lg.btn-block{:href => backups_path} Archivos de Backups
        %br
      .col-lg-4
        %a.btn.btn-outline.btn-primary.btn-lg.btn-block{:href => summary_crop_controls_path} Control de Granos


.row
  .col-lg-12
    #receta
      .view-container
        .view-frame.animate-view{"ng-view" => ""}



.row
  .col-lg-12
    #todoApp
      %h2 Todo
      %div{"ng-controller" => "TodoController"}
        %span {{remaining()}} of {{todos.length}} remaining
        [
        %a{:href => "", "ng-click" => "archive()"} archive
        ]
        %ul.list-unstyled
          %li{"ng-repeat" => "todo in todos"}
            %input{"ng-model" => "todo.done", :type => "checkbox"}/
            %span{:class => "done-{{todo.done}}"} {{todo.text}}
        %form{"ng-submit" => "addTodo()"}
          %input{"ng-model" => "todoText", :placeholder => "add new todo here", :size => "30", :type => "text"}/
          %input.btn.btn-primary{:type => "submit", :value => "add"}/

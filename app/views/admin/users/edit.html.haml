.dark.data-block
  %header
    %h2(style="float: left;")
      Editando #{@user.email}

  %section
    = form_for  [:admin, @user] , :html=>{:class =>'form-horizontal'} do |f|
      - if @user.errors.any?
        #error_explanation
          %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
          %ul
            - @user.errors.full_messages.each do |msg|
              %li= msg
      %fieldset
        .control-group
          = f.label :email, :class =>'control-label'
          .controls
            = f.text_field :email

          = f.label :role_ids, 'Permisos',  :class =>'control-label'
          .controls
            = f.select :role_ids, options_for_select(Role.all.map{|r| [r.pretty_name, r.id]}, @user[:role_ids]),{}, :multiple => true



        .form-actions
          = f.submit "Save", :class => 'btn-primary btn-large'

    = link_to 'Show', admin_user_path(@user)
    \|
    = link_to 'Back', admin_users_path

.row
  .col-lg-12
    %h1.page-header Usuarios

    
.row
  .col-lg-12
    %table.table.table-bordered
      %tr
        %th Email
        %th Permisos
        %th Ultimo ingreso
        %th

      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.roles.pluck('pretty_name').join(", ")
          %td= user.last_sign_in_at.to_formatted_s(:short)  if user.last_sign_in_at?
          %td
            = link_to edit_admin_user_path(user) do
              %i.fa-2x.fa.fa-pencil

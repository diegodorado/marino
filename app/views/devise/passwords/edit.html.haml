.row
  .span6
    .well
      %h3 Cambia tu contraseña
      %hr
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class =>'form-horizontal',:method => :put }) do |f|
        = devise_error_messages!    
        = f.hidden_field :reset_password_token
        %fieldset
          .control-group
            = f.label :password, "Nueva Contraseña"
            .controls
              = f.password_field :password
          .control-group
            = f.label :password_confirmation
            .controls
              = f.password_field :password_confirmation
          .form-actions
            = f.submit "Cambiar contraseña", :class => 'btn-primary btn-large'
  .span5.offset1
    = render :partial => "devise/shared/links"

%ul
- if controller_name != 'sessions'
  %li
    = link_to "Ya tienes cuenta? Inicia sesión aquí", new_session_path(resource_name)
- if devise_mapping.registerable? && controller_name != 'registrations'
  %li
    = link_to "No tienes cuenta? Registrate aquí", new_registration_path(resource_name)
- if devise_mapping.recoverable? && controller_name != 'passwords'
  %li
    = link_to "Olvidaste tu contraseña?", new_password_path(resource_name)
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %li
    = link_to "No recibiste instrucciones para confirmar tu cuenta?", new_confirmation_path(resource_name)
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %li
    = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)

= form_for @store, :html=>{:class =>'form-horizontal'} do |f|
  - if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .control-group
      = f.label :name, :class =>'control-label'
      .controls
        = f.text_field :name
    .form-actions
      = f.submit "Save", :class => 'btn-primary btn-large'    

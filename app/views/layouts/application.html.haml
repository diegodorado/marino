!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Marino"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="/favicon.ico" rel="shortcut icon")


  %body
    #ajax-indicator
      =image_tag 'loading.gif', :size=> '32x32'
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") Home
          .container.nav-collapse
            %ul.nav
              %li.active= link_to "Backups", "/backups"
              %li= link_to "Messages", "/messages"
              %li= link_to "Precios Granos", "/crops"
            %ul.nav.pull-right
              - if user_signed_in?
                %li= link_to "Admin", "/admin"
                %li
                  = link_to(current_user.email, edit_user_registration_path)
                %li
                  = link_to('Salir', destroy_user_session_path, :method=>'delete')
              - else
                %li
                  = link_to('Ingresar', new_user_session_path)
                %li
                  = link_to('Registrarse', new_user_registration_path)
    .container
      #content
        = bootstrap_flash
        = yield

    
      %footer
        %p &copy; Marino 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    = javascript_tag yield :app_js_load
    = javascript_tag "app.start();"
    

.dark.data-block
  %header
    %h2(style="float: left;")
      #{current_company.name} - Control de granos
    %ul.data-header-actions
      %li
        = select_tag 'store_select', options_from_collection_for_select(@stores, :_id, :name), :prompt => "(Todos los Depósitos)"
      %li
        = select_tag 'crop_select', options_from_collection_for_select(@crops, :_id, :name)
      %li
        %button#add_cc.btn.btn-alt.btn-success.disabled Agregar Línea
      %li
        %button#delete_cc.btn.btn-alt.btn-danger.disabled Eliminar Línea

  %section

    #crop_control_grid{:style => "width:100%;height:300px;"}
#comments
  

= app_js_load :company=> @company
= app_js_load :company_comments=> @company_comments
= app_js_load :crop_control=> true
= app_js_load :crop_controls=> @crop_controls
= app_js_load :stores=> @stores
= app_js_load :crops=> @crops


%form.form-horizontal.no-margin{:name => "crop_control"}
  %table.table
    %thead
      %tr
        %th.col-sm-2 Fecha
        %th.col-sm-2 Tipo Doc
        %th.col-sm-2 DepÃ³sito
        %th.col-sm-2 Grano
        %th.col-sm-4 InputaciÃ³n
    %tbody
      %tr
        %td
          .input-group.date
            %input.form-control{:type=> "text", :name =>"fecha", :required => true, :value=> @crop_control.fecha}
            %span.input-group-addon
              %i.glyphicon.glyphicon-th        
        
        %td
          %select.form-control{:name =>"tipo_doc", :required => true}
            - for tipo_doc in @tipo_docs
              %option{ :selected => (@crop_control.tipo_doc is tipo_doc) } #{tipo_doc}
        %td
          %select.form-control{:name =>"store_id", :required => true}
            - for store in @stores
              %option{ :selected => (@crop_control.store_id is store._id), :value => store._id }  #{store.name}
        %td
          %select.form-control{:name =>"crop_id", :required => true}
            - for crop in @crops
              %option{ :selected => (@crop_control.crop_id is crop._id), :value => crop._id }  #{crop.name}
        %td
          .btn-group{"data-toggle" => "buttons"}
            -if @crop_control.contabilidad
              -klass = "active"
            %label.btn.btn-outline.btn-primary{:class=>  klass}
              %input.checkbox{:autocomplete => "off", :name =>"contabilidad", :checked=> @crop_control.contabilidad, "type"=>"checkbox"} 
              Contabilidad
            -if @crop_control.gestion
              -klass2 = "active"
            %label.btn.btn-outline.btn-primary{:class=>  klass2}
              %input.checkbox{:autocomplete => "off", :name =>"gestion", :checked=> @crop_control.gestion, "type"=>"checkbox"} 
              Gestion
              

  %table.table
    %thead
      %tr
        %th.col-sm-2 Entrada
        %th.col-sm-2 Salida
        %th.col-sm-3 Precio Unitario
        %th.col-sm-5
    %tbody
      %tr
        %td
          %input.form-control{:name =>"entrada", :value=> @crop_control.entrada, :required => true, :type=> "number", :step=>"0.001", :min=>"0"}
        %td
          %input.form-control{:name =>"salida", :value=> @crop_control.salida, :required => true, :type=> "number", :step=>"0.001", :min=>"0"}
        %td
          %input.form-control{:name =>"precio_unitario", :value=> @crop_control.precio_unitario, :required => true, :type=> "number", :step=>"0.001", :min=>"0.001"}
      
  %table.table
    %thead
      %tr
        %th.col-sm-12 Comentarios
    %tbody
      %tr
        %td
          %textarea.form-control{:name =>"comentario"}
            =@crop_control.comentario
            
  .row
    .col-sm-12
      %a.btn-default.cancel.btn.btn-large.btn-alt{:href => "#index"} Volver al Listado
      %button.btn.btn-alt.btn-large.btn-primary{:type => "submit"} Guardar
      %a.btn-default.save_and_add.btn.btn-large.btn-alt{:href => "#"} Guardar y nuevo
